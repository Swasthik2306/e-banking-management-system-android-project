<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".homefragment">


    <RelativeLayout
        android:id="@+id/homecardview"
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/cardback">

        <TextView
            android:id="@+id/hfname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="193dp"
            android:gravity="center"
            android:text="name"
            android:textColor="#060606"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hlname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="194dp"
            android:layout_toEndOf="@+id/hfname"
            android:gravity="center"
            android:text="..."
            android:textColor="#060606"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/accno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="164dp"
            android:gravity="center"
            android:text="acc no."
            android:textColor="#060606"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="135dp"
            android:gravity="center"
            android:text="saving account"
            android:textColor="#474747"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/accbal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="100dp"
            android:gravity="center"
            android:text="â‚¹XXXX"
            android:textColor="#060606"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/refresh"
            android:layout_width="45dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="158dp"
            android:src="@drawable/refresh" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="312dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/qrb"
            android:layout_width="88dp"
            android:layout_height="60dp"
            android:background="@drawable/iconback"
            android:src="@drawable/ic_qr" />

        <ImageButton
            android:id="@+id/paynob"
            android:layout_width="88dp"
            android:layout_height="60dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/iconback"
            android:src="@drawable/baseline_contacts_24"/>

        <ImageButton
            android:id="@+id/bankb"
            android:layout_width="88dp"
            android:layout_height="60dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/iconback"
            android:src="@drawable/round_account_balance_24" />

        <ImageButton
            android:id="@+id/mr"
            android:layout_width="88dp"
            android:layout_height="60dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/iconback"
            android:src="@drawable/outline_charging_station_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="272dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/qrt"
            android:layout_width="88dp"
            android:layout_height="36dp"

            android:gravity="center|top"
            android:text="QR scan"
            android:textColor="#060606"
            android:textSize="14sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/paynot"
            android:layout_width="86dp"
            android:layout_height="36dp"
            android:layout_marginStart="14dp"
            android:gravity="center|top"
            android:text="pay phone number"
            android:textColor="#000000"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/bankt"
            android:layout_width="89dp"
            android:layout_height="37dp"
            android:layout_marginStart="14dp"
            android:gravity="center|top"
            android:text="bank transfer"
            android:textColor="#000000"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/mrt"
            android:layout_width="88dp"
            android:layout_height="36dp"
            android:layout_marginStart="14dp"
            android:gravity="center|top"
            android:text="mobile recharge"
            android:textColor="#000000"
            android:textStyle="bold|italic" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="168dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ins"
            android:layout_width="88dp"
            android:layout_height="60dp"
            android:background="@drawable/iconback"
            android:src="@drawable/outline_verified_user_24" />

        <ImageButton
            android:id="@+id/lb"
            android:layout_width="88dp"
            android:layout_height="60dp"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/iconback"
            android:src="@drawable/baseline_money_24" />

        <ImageButton
            android:id="@+id/cc"
            android:layout_width="88dp"
            android:layout_height="60dp"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/iconback"
            android:src="@drawable/baseline_currency_rupee_24" />

        <ImageButton
            android:id="@+id/inv"
            android:layout_width="88dp"
            android:layout_height="60dp"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/iconback"
            android:src="@drawable/invest" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="123dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/inst"
            android:layout_width="88dp"
            android:layout_height="36dp"
            android:gravity="center|top"
            android:text="Insurance"
            android:textColor="#060606"
            android:textSize="14sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/lt"
            android:layout_width="86dp"
            android:layout_height="36dp"
            android:layout_marginStart="14dp"
            android:gravity="center|top"
            android:text="Apply for loan"
            android:textColor="#000000"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/cct"
            android:layout_width="89dp"
            android:layout_height="37dp"
            android:layout_marginStart="14dp"
            android:gravity="center|top"
            android:text="currency convertor"
            android:textColor="#000000"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/invt"
            android:layout_width="88dp"
            android:layout_height="36dp"
            android:layout_marginStart="14dp"
            android:gravity="center|top"
            android:text="Investment"
            android:textColor="#000000"
            android:textStyle="bold|italic" />

    </LinearLayout>



</RelativeLayout>
