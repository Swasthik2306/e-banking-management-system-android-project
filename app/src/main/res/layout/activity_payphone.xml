<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".payphone">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/adamina"
        android:gravity="center"
        android:text="pay phone number"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/material_on_surface_stroke"
        android:ems="10"
        android:gravity="center|left"
        android:hint="phone number"
        android:maxLength="10"
        android:inputType="phone"
        android:paddingLeft="15dp"
        android:textColor="@color/white"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="348dp"
        android:layout_height="348dp"
        android:layout_margin="25dp"
        android:background="@drawable/phoneb"
        android:backgroundTint="#4986B7ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71">

        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#2E4095"
            android:text="1"
            android:textSize="25sp"
            android:textColor="#fff"
            app:cornerRadius="70dp" />

        <Button
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="131dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="1dp"
            android:backgroundTint="#2E4095"
            android:text="2"
            android:textSize="25sp"
            android:textColor="#fff"
            app:cornerRadius="70dp" />

        <Button
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="23dp"
            android:backgroundTint="#2E4095"
            android:text="3"
            android:textSize="25sp"
            android:textColor="#fff"
            app:cornerRadius="70dp" />

        <Button
            android:id="@+id/b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="110dp"
            android:backgroundTint="#2E4095"
            android:text="4"
            android:textSize="25sp"
            android:textColor="#fff"
            app:cornerRadius="70dp" />

        <Button
            android:id="@+id/b5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="131dp"
            android:layout_marginTop="110dp"
            android:backgroundTint="#2E4095"
            android:text="5"
            android:textSize="25sp"
            android:textColor="#fff"
            app:cornerRadius="70dp" />

        <Button
            android:id="@+id/b6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="23dp"
            android:backgroundTint="#2E4095"
            android:text="6"
            android:textSize="25sp"
            android:textColor="#fff"
            app:cornerRadius="70dp" />

        <Button
            android:id="@+id/b7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="195dp"
            android:backgroundTint="#2E4095"
            android:text="7"
            android:textSize="25sp"
            android:textColor="#fff"
            app:cornerRadius="70dp" />

        <Button
            android:id="@+id/b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="131dp"
            android:layout_marginTop="195dp"
            android:backgroundTint="#2E4095"
            android:text="8"
            android:textSize="25sp"
            android:textColor="#fff"
            app:cornerRadius="70dp" />

        <Button
            android:id="@+id/b9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="195dp"
            android:layout_marginEnd="23dp"
            android:backgroundTint="#2E4095"
            android:text="9"
            android:textSize="25sp"
            android:textColor="#fff"
            app:cornerRadius="70dp" />

        <Button
            android:id="@+id/b0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="131dp"
            android:layout_marginTop="280dp"
            android:backgroundTint="#2E4095"
            android:text="0"
            android:textSize="25sp"
            android:textColor="#fff"
            app:cornerRadius="70dp" />

        <ImageButton
            android:id="@+id/bs"
            android:layout_width="90dp"
            android:layout_height="41dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="285dp"
            android:layout_marginEnd="23dp"
            android:background="@drawable/phoneb"
            android:src="@drawable/outline_backspace_24" />

        <ImageButton
            android:id="@+id/check"
            android:layout_width="90dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="285dp"
            android:background="@drawable/phoneb"
            android:src="@drawable/round_check_24" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>